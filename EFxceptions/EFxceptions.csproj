<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.1</Version>
    <Description>EFxceptions is a .NET Standard library that captures the exceptions thrown by the EntityFramework from a SQL server and converts them into meaningful exceptions.</Description>
    <Copyright>Copyright (c) Hassan Habib &amp; Alice Luo  All rights reserved.</Copyright>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <PackageProjectUrl>https://www.efxceptions.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hassanhabib/EFxceptions</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <PackageTags>Exceptions EntityFramework</PackageTags>
    <PackageReleaseNotes>This is the first release of EFxceptions, it has the foundation of the library along with handling two basic Sql Exceptions, which are Duplicate Key exception and Foreign Key constraint violation exceptions.</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIcon>EFxceptions.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.3" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="Resources\EFxceptions.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
